<a href="<%= post_path(@conn, :show, @post.id) %>">
  <div class="list-group-item">
    <h4 class="list-group-item-heading"><%= @post.title %></h4>
    <span>
      <span class="text-muted"><%= @post.body %></span>
      <span class="pull-right">
        <strong><%= format_date @post.date %></strong>
      </span>
    </span>
  </div>
</a>
