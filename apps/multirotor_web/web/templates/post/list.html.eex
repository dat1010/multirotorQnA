<h1> All Questions</h1>
<div class="list-group">
  <%= for p <- @posts do %>
    <a href="posts/<%= p.id %>">
      <div class="list-group-item">
        <h4 class="list-group-item-heading"><%= p.title %></h4>
        <span>
          <span class="text-muted"><%= p.body %></span>
          <span class="pull-right">
            <strong><%= format_date p.date %></strong>
          </span>
        </span>
      </div>
    </a>
  <% end %>
</div>
